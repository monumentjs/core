{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "alwaysStrict": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "lib": [
            "esnext"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "strictFunctionTypes": true,
        "baseUrl": "./",
        "paths": {
            "@monument/*": [
                "packages/*"
            ]
        }
    },
    "exclude": [
        "./node_modules/**"
    ]
}
