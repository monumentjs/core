{
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap --hoist",
        "compile": "tsc",
        "lint": "tslint --format stylish --project .",
        "lint:fix": "tslint --fix --format stylish --project .",
        "postinstall": "npm run bootstrap",
        "prepublishOnly": "npm run lint && npm run compile && npm install && npm test",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^23.3.9",
        "ts-jest": "^23.10.4",
        "jest": "^23.6.0",
        "lerna": "^3.4.3",
        "tslint": "^5.11.0",
        "typescript": "^3.1.6"
    },
    "jest": {
        "clearMocks": true,
        "automock": false,
        "roots": [
            "<rootDir>/packages"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "\\.test\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
