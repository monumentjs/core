{
    "private": true,
    "author": "Alex Chugaev <achugaev93@gmail.com>",
    "license": "MIT",
    "repository": "https://github.com/monumentjs/core.git",
    "engines": {
        "node": ">=6"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap --hoist",
        "prepublishOnly": "npm run lint && npm run compile && npm run test",
        "postinstall": "npm run bootstrap",
        "lint": "tslint --fix --format stylish --project .",
        "compile": "tsc",
        "test": "jest --verbose",
        "test:coverage": "jest --coverage --verbose",
        "coveralls": "cat ./coverage/lcov.info | coveralls"
    },
    "dependencies": {
        "reflect-metadata": "^0.1.12"
    },
    "devDependencies": {
        "@types/jest": "^22.2.2",
        "@types/node": "^9.6.2",
        "coveralls": "^3.0.0",
        "jest": "^22.4.3",
        "lerna": "^2.10.0",
        "ts-jest": "^22.4.2",
        "tslint": "^5.9.1",
        "typescript": "^2.8.1"
    },
    "jest": {
        "automock": false,
        "resetMocks": true,
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": ".*\\.spec\\.(ts|tsx)$",
        "transformIgnorePatterns": [],
        "coveragePathIgnorePatterns": [],
        "testPathIgnorePatterns": []
    }
}
