{
  "name": "@typescript-standard-library/core",
  "version": "0.0.44",
  "description": "Core module of TypeScript standard library",
  "keywords": [
    "typescript",
    "standard",
    "library",
    "core",
    "dependency",
    "injection",
    "container",
    "decorators"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "prepublishOnly": "npm i && npm run build",
    "build": "npm run lint && npm run compile && npm test",
    "lint": "tslint --fix --format stylish --project .",
    "compile": "tsc",
    "test": "jest -i --verbose",
    "types:clear": "find ./Source -type f -name '*.d.ts' -delete && find ./Tests -type f -name '*.d.ts' -delete"
  },
  "author": "Alex Chugaev <achugaev93@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.46",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  },
  "repository": "https://github.com/typescript-standard-library/Core.git",
  "jest": {
    "automock": false,
    "resetMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.(ts|tsx)$",
    "transformIgnorePatterns": [],
    "coveragePathIgnorePatterns": [],
    "testPathIgnorePatterns": []
  }
}
